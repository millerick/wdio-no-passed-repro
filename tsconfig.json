{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "dist",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": [
    "common/**/*.ts",
    "test/**/*.ts",
    "interfaces/**/*.ts",
    "pages/**/*.ts",
    "reporters/**/*.ts",
    "**/*.d.ts",
    "wdio.conf.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
